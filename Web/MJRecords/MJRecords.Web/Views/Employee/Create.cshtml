<script>
    const getSupervisorsUrl = '@Url.Action("GetAvailableSupervisors", "Employee")';
    const departmentDropdown = document.getElementById('DepartmentList');
    const supervisorsList = document.getElementById('SupervisorsList');

    function populateSupervisors(departmentId, selectedSupervisorId = null) {
        supervisorsList.innerHTML = '<option selected disabled>--- SELECT SUPERVISOR ---</option>';

        if (departmentId) {
            fetch(`${getSupervisorsUrl}?deptId=${departmentId}`)
                .then(resp => resp.json())
                .then(data => {
                    data.forEach(supervisor => {
                        const option = document.createElement('option');
                        option.value = supervisor.id;
                        option.text = supervisor.fullName;

                        // Re-select the supervisor if applicable
                        if (selectedSupervisorId && option.value == selectedSupervisorId) {
                            option.selected = true;
                        }

                        supervisorsList.appendChild(option);
                    });
                })
                .catch(err => console.error(`Error fetching supervisors:`, err));
        }
    }

    // On department dropdown change
    departmentDropdown.addEventListener('change', e => {
        populateSupervisors(e.target.value);
    });

    // on page load if there are model validation errors
    window.addEventListener('DOMContentLoaded', () => {
        const selectedDeptId = departmentDropdown.value;
        const selectedSupervisorId = supervisorsList.getAttribute('data-selected');

        if (selectedDeptId) {
            populateSupervisors(selectedDeptId, selectedSupervisorId);
        }
    });
</script>

