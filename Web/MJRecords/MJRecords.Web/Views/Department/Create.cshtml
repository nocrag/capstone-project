@model MJRecords.Model.Department

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.Errors.Count > 0)
            {
                <div class="text-danger">
                    <ul>
                        @foreach (var e in Model.Errors
                       .Where(err => err.ErrorType == MJRecords.Types.ErrorType.Business))
                        {
                            <li>@e.Description</li>
                        }
                    </ul>
                </div>
            }
            @* <div class="form-group"> *@
            @*     <label asp-for="Id" class="control-label"></label> *@
            @*     <input asp-for="Id" class="form-control" /> *@
            @*     <span asp-validation-for="Id" class="text-danger"></span> *@
            @* </div> *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvocationDate" class="control-label"></label>
                <input asp-for="InvocationDate" class="form-control" />
                <span asp-validation-for="InvocationDate" class="text-danger"></span>
            </div>
            @* <div class="form-group"> *@
            @*     <label asp-for="RecordVersion" class="control-label"></label> *@
            @*     <input asp-for="RecordVersion" class="form-control" /> *@
            @*     <span asp-validation-for="RecordVersion" class="text-danger"></span> *@
            @* </div> *@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
